        <div class="max-md:hidden flex items-center justify-center">
          <Image src={mh} alt="Service-4" class="h-36" width={150} />
        </div>
      </div>

      <!-- Carousel -->

      <div class="max-md:my-6 flex-col max-lg:gap-4 grid grid-cols-1 gap-8">
        <!-- Testimonial 1-->
