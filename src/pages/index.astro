---
import Layout from "../layouts/Layout.astro";
import "flowbite";
import Image from "astro/components/Image.astro";
import { hero, vector, rana, philosophy } from "../assets";
import Button from "../components/Button.astro";
import Carousel from "../components/CarouselComponent.astro";
import Quote from "../components/Quote.astro";
import Calendly from "../components/Calendly.astro";
import FAQ from "../components/FAQ.astro";
import Slider from "../components/Slider.astro";
---

<Layout title="Sunbird Speech Therapy">
  <!-- Hero -->

  <section class="bg-[--primary]">
    <div
      class="max-container max-xl:px-6 flex items-center justify-between lg:py-20 py-8 gap-8 max-lg:flex-col"
    >
      <div class="basis-1/2">
        <h6 class="opacity-40 text-white max-md:py-4">
          Nurturing The Teacher in Every Parent
        </h6>
        <h1 class="text-white pb-4 max-md:text-4xl max-xl:text-6xl">
          Welcome to Sunbird Speech Therapy!
        </h1>
        <p class="text-white py-4">
          Your go-to provider for pediatric speech and language services and
          resources. In-home services available in Bay Area locations and online
          services available statewide.
        </p>
        <div class="max-md:justify-center flex">
          <a href="#calendly">
            <Button id="scheduleBtn" type="submit" class="my-6"
              >Schedule a free consultation
            </Button>
          </a>
        </div>
      </div>
      <div
        class="basis-1/2 lg:aspect-square relative overflow-hidden max-lg:hidden"
      >
        <Image src={hero} alt="hero_img" class="absolute -top-16" />
      </div>
    </div>
  </section>
  <div
    class="basis-1/2 aspect-square relative overflow-hidden hidden max-lg:block"
  >
    <Image src={hero} alt="hero_img" class="absolute -top-16" />
  </div>

  <!-- Services -->

  <section class="bg-[--secondary]" id="services">
    <div class="max-container py-12 gap-8 max-xl:px-6 max-md:text-center">
      <div class="flex max-md:justify-center">
        <Image src={vector} alt="vector" class="py-6 max-md:p-4" />
      </div>

      <h2 class="text-[--primary-text] max-md:p-4">Services</h2>

      <div class="flex gap-16 mt-12 max-lg:gap-2 flex-col md:flex-row">
        <div class="">
          <span
            class="material-symbols-outlined text-5xl text-[--primary-accent]"
          >
            chat_bubble
          </span>

          <h4 class="text-black my-4">Consultation</h4>

          <p class="py-4 text-[--secondary-text]">
            If you have concerns about your child`s speech or language
            development, or if you have any questions about our services, please
            schedule a free 15-minute consultation.
          </p>
        </div>

        <div class="">
          <span
            class="material-symbols-outlined text-5xl text-[--primary-accent]"
          >
            library_books
          </span>

          <h4 class="text-black my-4">Evaluation</h4>

          <p class="py-4 text-[--secondary-text]">
            We conduct comprehensive speech and language evaluations using both
            formal and informal assessments to determine your child`s current
            skills and needs.
          </p>
        </div>

        <div class="">
          <span
            class="material-symbols-outlined text-5xl text-[--primary-accent]"
          >
            supervisor_account
          </span>

          <h4 class="text-black my-4">Therapy</h4>

          <p class="py-4 text-[--secondary-text]">
            Based on the initial evaluation, we will create a personalized plan
            with specific goals for your child. Therapy sessions are available
            online, in-home <a href="/Sunbird/faq">
              <span class="text-[--primary-accent] font-semibold">
                See FAQ
              </span>
            </a> or through a hybrid model.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Philosophy -->

  <div class="overflow-hidden hidden max-lg:block">
    <Image src={philosophy} alt="philosophy_img" />
  </div>
  <section>
    <div class="max-container py-16 max-md:py-12 max-xl:px-6">
      <div class="flex gap-8 max-md:flex-col">
        <div class="basis-1/2 overflow-hidden max-lg:hidden">
          <Image
            src={philosophy}
            alt="philosophy_img"
            class="h-full object-cover"
          />
        </div>

        <div
          class="flex-col basis-1/2 max-lg:basis-full justify-between gap-12 max-md:text-center max-xl:p-0 max-xl:text-center"
        >
          <h2 class="capitalize text-[--primary-text]">our philosophy</h2>

          <p class="py-4 text-[--secondary-text]">
            At Sunbird, we are committed to helping every child build confidence
            through the art of effective communication. We firmly believe that a
            robust language foundation impacts far more than just speech; it
            fosters self-expression, meaningful relationships, and academic
            success.
          </p>

          <p class="py-4 text-[--secondary-text]">
            We empower each child to unlock their potential through play-based
            activities, creating a nurturing atmosphere that honors their unique
            personality and learning style.
          </p>

          <p class="py-4 text-[--secondary-text]">
            The essence of our approach lies in collaborating with parents to
            provide step-by-step guidance in supporting their child`s
            communication journey.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- About -->

  <section class="bg-[--primary]">
    <div
      class="max-container py-12 flex gap-8 max-xl:px-6 flex-col lg:flex-row"
    >
      <div
        class="flex-col basis-1/2 justify-between gap-12 pr-16 max-xl:p-0 max-xl:text-center"
      >
        <h2 class="text-white">
          Meet <br class="lg:hidden" />Rana Barghouty
        </h2>
        <h6 class="text-white py-4 max-md:text-base opacity-75">
          MA, CCC-SLP, LSLS Cert. AVT
        </h6>

        <div class="block lg:hidden w-full">
          <Image src={rana} alt="rana_img" class="h-full object-cover" />
        </div>

        <p class="py-4 text-white">
          Hello! I am a bilingual (English/Arabic) Speech-Language Pathologist
          and the founder of Sunbird Speech Therapy. Recognizing the unique
          journey of each child, I am committed to fostering a supportive
          environment where your child`s communication skills can flourish.
        </p>

        <p class="py-4 text-white">
          With over 10 years of experience, I`ve had the privilege of supporting
          children of all ages, from infants to young adults. My professional
          background encompasses early intervention programs, schools and
          pediatric hospitals. These varied settings have provided me with
          invaluable insights, which I integrate into my practice.
        </p>

        <p class="py-4 text-white">
          It`s an honor to be a part of your child`s developmental journey, and
          I look forward to contributing to their success alongside you!
        </p>

        <p class="flex mt-16 lg:mt-32">
          <a
            class="body font-semibold text-white group transition-all duration-300 ease-in-out hover:-translate-y-1 w-full flex justify-end max-xl:justify-center"
            href="/Sunbird/about"
          >
            <span
              class="bg-left-bottom bg-gradient-to-r from-white to-white bg-[length:0%_2px] bg-no-repeat group-hover:bg-[length:100%_2px] transition-all duration-500 ease-out opacity-75 max-md:text-base"
            >
              Read more about me â†’
            </span>
          </a>
        </p>
      </div>

      <div class="basis-1/2 relative overflow-hidden lg:block hidden">
        <Image src={rana} alt="rana_img" class="h-full object-cover" />
      </div>
    </div>
  </section>

  <!-- Quote -->
  <section>
    <Quote />
  </section>

  <!-- Testimonials -->

  <section class="bg-[--secondary] py-12">
    <div class="max-container max-xl:m-4">
      <div class="flex max-md:justify-center">
        <Image src={vector} alt="vector" class="py-6 max-md:p-4" />
      </div>
      <div
        class="flex justify-between items-end max-md:flex-col max-md:items-center"
      >
        <h2
          class="text-[--primary-text] max-md:text-4xl max-md:text-center max-md:p-4"
        >
          Testimonials
        </h2>
        <h4 class="max-md:text-center text-[--primary-text] flex items-center">
          <a
            class="body font-semibold group transition-all duration-300 ease-in-out hover:-translate-y-1 w-full flex items-center"
            href="/Sunbird/testimonials"
          >
            <span
              class="bg-left-bottom bg-gradient-to-r from-gray-500 to-gray-500 bg-[length:0%_2px] bg-no-repeat group-hover:bg-[length:100%_2px] transition-all duration-500 ease-out opacity-75"
            >
              Read More
            </span>
            <span
              class="material-symbols-outlined pt-1 text-[--primary-text] opacity-75"
            >
              arrow_right_alt
            </span>
          </a>
        </h4>
      </div>

      <section class="max-md:hidden block">
        <div class="overflow-hidden py-12">
          <Carousel />
        </div>
      </section>
    </div>

    <section>
      <div class="overflow-hidden max-md:block hidden">
        <Slider />
      </div>
    </section>
  </section>

  <!-- FAQ -->
  <section class="bg-white">
    <div class="max-container py-12 max-xl:px-6 max-md:px-0">
      <div class="flex justify-between items-end max-md:flex-col">
        <h2
          class="max-md:text-4xl max-md:text-center max-md:w-full max-md:p-4 text-[--primary-text]"
        >
          Common Questions
        </h2>
        <h4 class="max-md:text-center max-md:w-full">
          <a
            class="body font-semibold group transition-all duration-300 ease-in-out hover:-translate-y-1 w-full flex items-center pt-2 justify-center"
            href="Sunbird/faq"
          >
            <span
              class="bg-left-bottom bg-gradient-to-r from-gray-500 to-gray-500 bg-[length:0%_2px] bg-no-repeat group-hover:bg-[length:100%_2px] transition-all duration-500 ease-out opacity-75 text-[--primary-text]"
            >
              View all FAQs
            </span>
            <span
              class="material-symbols-outlined text-[--primary-text] opacity-75 pt-1"
            >
              arrow_right_alt
            </span>
          </a>
        </h4>
      </div>
      <div class="m-8 mt-16 max-sm:m-4">
        <FAQ />
      </div>
    </div>
  </section>

  <!-- Calendly -->

  <section class="py-12 bg-white">
    <Calendly />
  </section>
  <style>
    * {
      /* border: 1px solid red; */
    }

    .material-symbols-outlined {
      font-variation-settings:
        "FILL" 0,
        "wght" 400,
        "GRAD" 0,
        "opsz" 24;
    }
  </style>
</Layout>
