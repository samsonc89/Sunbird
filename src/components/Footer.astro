---
import { Image } from "astro:assets";
import { logoBW } from "../assets";
---

<footer>
  <section class="max-container py-8 max-md:py-4">
    <div
      class="flex justify-between items-center max-md:items-start max-md:flex-col max-xl:px-6"
    >
      <div
        class="flex max-sm:w-full items-center justify-between w-2/5 max-md:flex-col max-md:items-start"
      >
        <a href="/Sunbird">
          <Image src={logoBW} class="w-1/2 lg:w-full" alt="logo-black" />
        </a>
        <!-- Navlinks -->

        <div
          class="flex items-start justify-center gap-12 text-bone max-md:flex-col max-xl:gap-4 max-xl:px-8 max-lg:py-8 w-full"
        >
          <a
            class="group transition-all duration-300 ease-in-out hover:-translate-y-1 text-[--secondary-text]"
            href="/Sunbird/#services"
          >
            <h6>Services</h6>
          </a>
          <a
            class="group transition-all duration-300 ease-in-out hover:-translate-y-1 text-[--secondary-text]"
            href="/Sunbird/about"
          >
            <h6>About</h6>
          </a>
          <a
            class="group transition-all duration-300 ease-in-out hover:-translate-y-1 text-[--secondary-text]"
            href="/Sunbird/testimonials"
          >
            <h6>Testimonials</h6>
          </a>
          <a
            class="group transition-all duration-300 ease-in-out hover:-translate-y-1 text-[--secondary-text]"
            href="/Sunbird/faq"
          >
            <h6>FAQ</h6>
          </a>
        </div>
      </div>

      <!-- Social Links -->

      <div
        class="flex max-lg:py-4 gap-4 max-md:items-start max-md:w-full justify-between items-center max-md:px-4 max-md:hidden"
      >
        <a href="tel:123-456-7890">
          <span class="material-symbols-outlined flex"> call</span>
        </a>

        <a href="mailto: hello@rana.com">
          <span class="material-symbols-outlined flex"> mail</span>
        </a>

        <a href="instagram://user?username={USERNAME}">
          <span class="fa fa-instagram flex" style="font-size:23px"></span>
        </a>

        <a href="https://www.linkedin.com/in/rana-barghouty-25877941">
          <span class="fa fa-linkedin flex" style="font-size:22px"></span>
        </a>

        <a href="facebook://user?username={USERNAME}">
          <span class="fa fa-facebook-official flex" style="font-size:22px"
          ></span>
        </a>
      </div>
    </div>
  </section>

  <!-- Social Links Mobile -->

  <div class="hidden max-md:block">
    <div
      class="max-lg:py-4 gap-4 max-md:items-start max-md:w-full justify-between items-center max-lg:px-4 max-container bg-gray-100 flex"
    >
      <a href="tel:123-456-7890">
        <span class="material-symbols-outlined flex"> call</span>
      </a>

      <a href="mailto: hello@rana.com">
        <span class="material-symbols-outlined flex"> mail</span>
      </a>

      <a href="instagram://user?username={USERNAME}">
        <span class="fa fa-instagram flex" style="font-size:23px"></span>
      </a>

      <a href="https://www.linkedin.com/in/rana-barghouty-25877941">
        <span class="fa fa-linkedin flex" style="font-size:22px"></span>
      </a>

      <a href="facebook://user?username={USERNAME}">
        <span class="fa fa-facebook-official flex" style="font-size:22px"
        ></span>
      </a>
    </div>
  </div>

